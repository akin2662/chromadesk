# Include data files
include data/io.github.anantdark.chromadesk.desktop
recursive-include data/icons *.png
recursive-include data *.desktop

# Include service templates
recursive-include chromadesk/services/templates *.in *.service *.timer

# Include documentation
include README.md
include LICENSE

# Include build scripts
include build.sh

# Exclude Python cache files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .*.swp
global-exclude .DS_Store

# Exclude build artifacts
global-exclude *.AppImage
global-exclude warn-*.txt
global-exclude xref-*.html
global-exclude build/
global-exclude dist/ 